<%= form_for @pet do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, value: "123 Steeet" %>
  </div>
  <div class="form-group">
    <%= f.label :found_on %>
    <%= f.text_field :found_on, value: Date.today %>
  </div>
  <div class="form-group">
    <%= f.label :species %>
    <%= f.select(:species, Pet::SPECIES) %>
  </div>
  <div class="form-group">
    <%= f.label "Dead?" %>
    <%= f.check_box :dead %>
  </div>

  <div class="form-group">
    <%= f.submit "Add", class: "btn btn-primary" %>
  </div>
<% end %>
